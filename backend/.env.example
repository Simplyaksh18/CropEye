# CropEye Location-Based GIS API Configuration

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Copernicus Data Space Ecosystem credentials (for when you implement satellite data download)
# Register for free at: https://dataspace.copernicus.eu/
COPERNICUS_USERNAME="your_username_here"
COPERNICUS_PASSWORD="your_password_here"
COPERNICUS_CLIENT_ID="your_client_id_here"
COPERNICUS_CLIENT_SECRET="your_client_secret_here"

# Default analysis parameters
DEFAULT_BBOX_SIZE=0.05
MAX_CLOUD_COVER=20
ANALYSIS_CACHE_DURATION=3600

# API settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
MAX_REQUESTS_PER_MINUTE=60

# Data directories
OUTPUT_DIR=output
DATA_DIR=data

# Logging
LOG_LEVEL=INFO